    "@modelcontextprotocol/sdk": "^1.13.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "shx": "^0.3.4",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18"
  }
}
